<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <record forcecreate="True" id="ir_cron_scheduler_membeship" model="ir.cron">
            <field name="name">Update Membership State</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/><!-- for NOT to relaunch this calculation after a relaunch of the server, because it's very slow in dev environnement and unusefull in prod environnement-->
            <field eval="'res.partner'" name="model"/>
            <field eval="'_membership_state_job'" name="function"/>
            <field eval="'()'" name="args"/>
            <field eval="time.strftime('%Y-%m-%d 23:20:00')" name="nextcall"/>
        </record>

    </data>
</openerp>
